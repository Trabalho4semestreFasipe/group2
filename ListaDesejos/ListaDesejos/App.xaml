<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListaDesejos.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="azulTopo">#269846</Color>
            <Color x:Key="labelTopo">White</Color>

            <Style x:Key="buttonMenu" TargetType="Button">
                <Setter Property="BorderRadius" Value="0"/>
                <Setter Property="TextColor" Value="{StaticResource labelTopo}"/>
                <Setter Property="BackgroundColor" Value="{StaticResource azulTopo}"/>
            </Style>

            <Style x:Key="widget" TargetType="StackLayout">
                <Setter Property="Padding" Value="10"/>
                <Setter Property="MinimumHeightRequest" Value="100"/>
            </Style>

            <Style x:Key="labelWidget" TargetType="Label">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="VerticalTextAlignment" Value="Start"/>
            </Style>
            <Style x:Key="labelList" TargetType="Label">
                <Setter Property="TextColor" Value="#cccccc"/>
                <Setter Property="FontSize" Value="11"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>